<p id="notice"><%= notice %></p>

<h1>Studies</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Study name</th>
      <th>Intro</th>
      <th>Goal</th>
      <th>Curriculum</th>
      <th>Max number</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.category %></td>
        <td><%= study.study_name %></td>
        <td><%= study.intro %></td>
        <td><%= study.goal %></td>
        <td><%= study.curriculum %></td>
        <td><%= study.max_number %></td>
        <td><%= study.status %></td>
        <td><%= link_to 'Show', study %></td>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

