

<div class="jumbotron" style="margin-bottom: 3 ">
	<div class="container">
        <h1 style="font-family:inherit">스터디 관리</h1>
    </div>
</div>

<div class="container">
<hr>
<p>
  <h3>모든 스터디</h3>
</p>
<hr>

<%= form_tag search_studies_path, :method => :get do %>
<%= text_field_tag :query, params[:query] %> <%= submit_tag "Search!" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>카테고리</th>
      <th>스터디명</th>
      <th>개요</th>
      <th>목표</th>
      <th>커리큘럼</th>
      <th>정원</th>
      <th>신청 인원</th>
      <th>개설유무</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.category.category_name %></td>
        <td><%= study.study_name %></td>
        <td><%= study.intro %></td>
        <td><%= study.goal %></td>
        <td><%= study.curriculem %></td>
        <td><%= study.max_number %></td>
        <td><%= study.size %></td>
        <td><%= study.status %></td>
        <td><%= link_to 'Show', category_study_path(study.category, study) %></td>
        <td><%= link_to 'Edit', edit_category_study_path(study.category, study) %></td>
        <td><%= link_to 'Destroy', [study.category, study], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>